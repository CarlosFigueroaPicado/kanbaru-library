<style>
  header {
    align-items: center;
    justify-content: space-between;
    padding: 10px;
    z-index: 1000;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
  }
  div {
    display: flex;
    align-items: center;
    gap: 10px;
    height: 60px;
    border-radius: 15px;
    padding-inline: 40px;
    padding-top: 0.3rem;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
    border-radius: 15px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  }
  ul {
    display: flex;
    gap: 40px;
    align-items: center;
    padding: 5px 40px;
  }
  li {
    margin-top: 0.3rem;
  }
  a {
    color: #fff;
    font-size: 1rem;
    &:hover {
      text-decoration: underline;
    }
    font-size: 1em;
  }
  .submenu {
    position: absolute;
    top: 90%;
    right: 2%;
    height: auto;
    padding: 0;
    display: none;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  }
  .submenu ul {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding: 15px 20px;
    border-radius: 15px;
    z-index: 1000;
    width: auto;
  }
  .submenu ul a {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .submenu li {
    width: 100%;
    margin-top: 0;
  }
  .submenu img {
    width: 1.3rem;
    height: auto;
    align-items: start;
  }
  .user {
    position: relative;
    cursor: pointer;
  }
  .submenu.active {
    display: block;
  }

  .cambiar_tema {
    position: relative;
    display: flex;
    gap: 10px;
    color: #fff;
    cursor : pointer;
    &:hover{
      text-decoration: underline;
    }
  }
  .temas {
    position: absolute;
    height: auto;
    width: 100%;
    right: 101%;
    top: 20%;
    padding: 0;
    display: none;
    color: #fff;
    
  }
  svg{
    stroke: #fff;
  }
  .temas button{
    display: flex;
    gap: 10px;
    width: 100%;
    height: auto;
    cursor: pointer;
    &:hover {
      text-decoration: underline;
    }
  }
  .temas.active{
    display: block;
  }
</style>
<script>
  import { cambiarTema } from "@utils/temaPage";

  function subMenu() {
    const submenu = document.querySelector(".submenu");
    if (submenu) {
      submenu.classList.toggle("active");
    }
  }

  document.querySelector(".user")?.addEventListener("click", function (e) {
    e.preventDefault();
    e.stopPropagation();
    subMenu();
  });

  document.addEventListener("click", async function (event) {
    const target = event.target;
    if (!(target instanceof HTMLElement)) return;

    if (!target.closest(".submenu") && !target.closest(".user")) {
      document.querySelector(".submenu")?.classList.remove("active");
    }

    if (!target.closest(".temas") && !target.closest(".cambiar_tema")) {
      document.querySelector(".temas")?.classList.remove("active");
    }

    if(target.closest("#btn-logout")){
      const response = await fetch("/api/logout");
      if(response.status === 200){
        window.location.href = "/account/login";
      }
    }

    if(target.closest("#tema-sistema") || target.closest("#tema-claro") || target.closest("#tema-oscuro")){
      const tema = target.closest("#tema-sistema") ? "sistema" : target.closest("#tema-claro") ? "claro" : "oscuro";
      
      cambiarTema(tema);
    }
  });
  document.querySelector(".cambiar_tema")?.addEventListener("click", function (e) {
    e.preventDefault();
    e.stopPropagation();
    const temas = document.querySelector(".temas");
    if (temas) {
      temas.classList.toggle("active");
    }
  });
</script>
