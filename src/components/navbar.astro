<header>
  <div>
    <a href="#">
      <img src="/public/Logo.png" alt="logo" width="90" />
    </a>
  </div>
  <nav>
    <ul>
      <li><a href="#">Libreria</a></li>
      <li><a href="#">Estadisticas</a></li>
      <li><a href="#">Acerca</a></li>
      <img
        src="/public/perfil_menu.svg"
        alt="user"
        width="35"
        height="35"
        class="user"
      />
      <div class="submenu">
        <ul>
          <li>
            <a href="#"
              ><img src="/public/perfil_menu.svg" alt="Perfil" />Tu perfil</a
            >
          </li>
          <li>
            <a href="#"><img src="/public/tema.svg" alt="Cambiar tema" />Tema</a
            >
          </li>
          <li>
            <a href="#"
              ><img src="/public/grafico.svg" alt="Crear gráfica" />Crear
              gráfica</a
            >
          </li>
          <li>
            <a href="#"
              ><img
                src="/public/configuracion.svg"
                alt="Configuración"
              />Configuración</a
            >
          </li>
          <li>
            <a href="#"
              ><img src="/public/cerra-sesion.svg" alt="Cerrar sesión" />Cerrar
              sesión</a
            >
          </li>
        </ul>
      </div>
    </ul>
  </nav>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px;
    z-index: 1000;
  }
  div {
    display: flex;
    align-items: center;
    gap: 10px;
    background-color: var(--color-principal-600);
    height: 60px;
    border-radius: 15px;
    padding-inline: 40px;
    padding-top: 0.3rem;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
    background-color: var(--color-principal-600);
    border-radius: 15px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  }
  ul {
    display: flex;
    gap: 40px;
    align-items: center;
    padding: 5px 40px;
  }
  li {
    margin-top: 0.3rem;
  }
  a {
    color: #fff;
    font-size: 1rem;
    &:hover {
      text-decoration: underline;
    }
  }
  .submenu {
    position: absolute;
    top: 4.5rem;
    right: 1.2rem;
    height: auto;
    padding: 0;
    display: none;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  }
  .submenu ul {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding: 15px 20px;
    border-radius: 15px;
    z-index: 1000;
    width: auto;
  }
  .submenu ul a {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .submenu li {
    width: 100%;
    margin-top: 0;
  }
  .submenu img {
    width: 1.3rem;
    height: auto;
    align-items: start;
  }
  .user {
    position: relative;
    cursor: pointer;
  }
  .submenu.active {
    display: block;
  }
</style>
<script>
  function subMenu() {
    const submenu = document.querySelector(".submenu");
    if (submenu) {
      submenu.classList.toggle("active");
    }
  }

  document.querySelector(".user")?.addEventListener("click", function (e) {
    e.preventDefault();
    e.stopPropagation();
    subMenu();
  });

  document.addEventListener("click", function (event) {
    const target = event.target;
    if (!(target instanceof HTMLElement)) return;

    if (!target.closest(".submenu") && !target.closest(".user")) {
      document.querySelector(".submenu")?.classList.remove("active");
    }
  });
</script>
